  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shoelace-style/shoelace": "^2.18.0",
    "@thepassle/app-tools": "^0.9.12",
    "animate.css": "^4.1.1",
    "chart.js": "^4.4.6",
    "chartjs-adapter-moment": "^1.0.1",
    "crypto-js": "^4.2.0",
    "fs-extra": "^11.2.0",
    "h3": "^1.13.0",
    "lit": "^3.2.1",
    "moment": "^2.30.1",
    "urlpattern-polyfill": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/fs-extra": "^11.0.4",
    "prettier": "3.2.5",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.8"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
